{
  "manifest_version": 3,
  "name": "WhatsApp Message Blur",
  "version": "1.0",
  "description": "Blur WhatsApp Web messages for privacy. Hover to reveal.",
  "permissions": [],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}